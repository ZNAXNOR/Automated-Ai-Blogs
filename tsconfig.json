{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@clients/*": ["src/clients/*"],
      "@src/*": ["src/*"]
    },
    "types": ["jest"]
  },
  "include": ["src/**/*.ts", "src/testing/tests/**/*.ts"],
  "exclude": ["node_modules"]
}